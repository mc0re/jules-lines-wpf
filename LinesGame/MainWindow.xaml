<Window x:Class="LinesGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LinesGame"
        xmlns:local_converters="clr-namespace:LinesGame.Converters"
        mc:Ignorable="d"
        Title="Lines Game" Height="500" Width="750" MinWidth="450" MinHeight="400">
    <Window.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <local_converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" /> <!-- Game area -->
            <!-- Removed Auto height row for button, will integrate button into side panel -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="300"/> <!-- Game board -->
            <ColumnDefinition Width="Auto" MinWidth="180"/> <!-- Score, Next Balls, Button -->
        </Grid.ColumnDefinitions>

        <!-- Game Board Area -->
        <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
            <ItemsControl x:Name="GameBoardItemsControl" ItemsSource="{Binding Cells}" Margin="5"
                          VerticalAlignment="Top" HorizontalAlignment="Left">
                          <!-- Explicitly set alignment if not stretching, to match canvas behavior -->
                <ItemsControl.Style>
                    <Style TargetType="ItemsControl">
                        <Setter Property="IsEnabled" Value="{Binding IsGameOver, Converter={StaticResource InverseBooleanConverter}}"/>
                    </Style>
                </ItemsControl.Style>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="9" Columns="9"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="0.5" MouseLeftButtonDown="Cell_MouseLeftButtonDown">
                             <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush" Value="Gray"/>
                                    <Setter Property="BorderThickness" Value="0.5"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                            <Setter Property="BorderBrush" Value="CornflowerBlue"/>
                                            <Setter Property="BorderThickness" Value="2"/>
                                        </DataTrigger>
                                         <DataTrigger Binding="{Binding IsPathHighlight}" Value="True">
                                            <Setter Property="Background" Value="#33FFFF00"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Ellipse x:Name="ballEllipse"
                                     Width="30" Height="30"
                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                     Visibility="{Binding IsBallVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Ellipse.Fill>
                                    <SolidColorBrush Color="{Binding Color, FallbackValue=Transparent, TargetNullValue=Transparent}"/>
                                </Ellipse.Fill>
                                <Ellipse.RenderTransform>
                                    <TranslateTransform Y="0"/>
                                </Ellipse.RenderTransform>

                                <Ellipse.Resources>
                                    <Storyboard x:Key="sb_JumpAnimation" RepeatBehavior="Forever" AutoReverse="True">
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                         To="-5" Duration="0:0:0.3" />
                                    </Storyboard>
                                    <Storyboard x:Key="sb_ResetJumpAnimation">
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                         To="0" Duration="0:0:0.01" />
                                    </Storyboard>
                                </Ellipse.Resources>

                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <!-- Default state (empty cell) - No visible stroke -->
                                        <Setter Property="Stroke" Value="Transparent"/>
                                        <Setter Property="StrokeThickness" Value="0"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasBall}" Value="True">
                                                <!-- Stroke for actual balls -->
                                                <Setter Property="Stroke" Value="#FF333333"/> <!-- Dark Gray -->
                                                <Setter Property="StrokeThickness" Value="0.75"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard Storyboard="{StaticResource sb_JumpAnimation}" x:Name="bs_Selected_JumpAnimOn" />
                                                </DataTrigger.EnterActions>
                                                <DataTrigger.ExitActions>
                                                    <StopStoryboard BeginStoryboardName="bs_Selected_JumpAnimOn"/>
                                                    <BeginStoryboard Storyboard="{StaticResource sb_ResetJumpAnimation}" x:Name="bs_Selected_JumpAnimOffReset"/>
                                                </DataTrigger.ExitActions>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>

                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                         <BeginStoryboard Storyboard="{StaticResource sb_ResetJumpAnimation}" />
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Canvas x:Name="animationCanvas" IsHitTestVisible="False"
                    VerticalAlignment="{Binding ElementName=GameBoardItemsControl, Path=VerticalAlignment}"
                    HorizontalAlignment="{Binding ElementName=GameBoardItemsControl, Path=HorizontalAlignment}"
                    Width="{Binding ElementName=GameBoardItemsControl, Path=ActualWidth}"
                    Height="{Binding ElementName=GameBoardItemsControl, Path=ActualHeight}"
                    Margin="{Binding ElementName=GameBoardItemsControl, Path=Margin}"
                    ClipToBounds="False"> <!-- Allow drawing outside bounds if necessary, though proper sizing is key -->
            </Canvas>

            <TextBlock Text="Game Over!"
                       FontSize="48" FontWeight="Bold" Foreground="DarkRed"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       IsHitTestVisible="False">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsGameOver}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>

        <!-- Right Panel: Score, Next Balls, Button -->
        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Top">
            <TextBlock Text="{Binding Score, StringFormat='Score: {0}'}" FontSize="20" FontWeight="SemiBold" Margin="5,5,5,10"/>

            <TextBlock Text="Next Balls:" FontSize="16" Margin="5,10,5,2"/>
            <ItemsControl ItemsSource="{Binding NextBallColors}" HorizontalAlignment="Left" Margin="5,0,5,15">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Ellipse Width="25" Height="25" Margin="3"> <!-- Slightly larger next balls -->
                            <Ellipse.Fill>
                                <SolidColorBrush Color="{Binding}"/>
                            </Ellipse.Fill>
                            <Ellipse.Stroke>
                                <SolidColorBrush Color="Black" />
                            </Ellipse.Stroke>
                            <Ellipse.StrokeThickness>0.5</Ellipse.StrokeThickness>
                        </Ellipse>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button Content="New Game" Width="120" Margin="5,20,5,5" Padding="10,7"
                    HorizontalAlignment="Center" Click="NewGameButton_Click"
                    FontWeight="SemiBold" Background="LightSteelBlue" BorderBrush="SteelBlue"/>

            <!-- Removed the collapsed placeholder Border -->
        </StackPanel>
    </Grid>
</Window>
