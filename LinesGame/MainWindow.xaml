<Window x:Class="LinesGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LinesGame"
        mc:Ignorable="d"
        Title="Lines Game" Height="500" Width="750" MinWidth="450" MinHeight="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" /> <!-- Game area -->
            <!-- Removed Auto height row for button, will integrate button into side panel -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="300"/> <!-- Game board -->
            <ColumnDefinition Width="Auto" MinWidth="180"/> <!-- Score, Next Balls, Button -->
        </Grid.ColumnDefinitions>

        <!-- Game Board Area -->
        <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,10,0"> <!-- Added margin to separate from side panel -->
            <ItemsControl ItemsSource="{Binding Cells}" Margin="5">
                <ItemsControl.Style>
                    <Style TargetType="ItemsControl">
                        <Setter Property="IsEnabled" Value="True"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsGameOver}" Value="True">
                                <Setter Property="IsEnabled" Value="False"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ItemsControl.Style>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="9" Columns="9"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="0.5" MouseLeftButtonDown="Cell_MouseLeftButtonDown">
                             <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush" Value="Gray"/> <!-- Darker, more subtle border -->
                                    <Setter Property="BorderThickness" Value="0.5"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                            <Setter Property="BorderBrush" Value="CornflowerBlue"/> <!-- More appealing selection color -->
                                            <Setter Property="BorderThickness" Value="2"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Ellipse Width="30" Height="30" Margin="2" x:Name="ballEllipse"> <!-- Increased margin slightly -->
                                <Ellipse.RenderTransform>
                                    <TranslateTransform Y="0"/>
                                </Ellipse.RenderTransform>
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="Transparent"/>
                                        <Setter Property="Stroke" Value="DarkGray"/> <!-- Default stroke for all ellipses -->
                                        <Setter Property="StrokeThickness" Value="0.5"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasBall}" Value="True">
                                                <Setter Property="Fill">
                                                    <Setter.Value>
                                                        <SolidColorBrush Color="{Binding Color}"/>
                                                    </Setter.Value>
                                                </Setter>
                                                <!-- Change stroke for balls to make them pop a bit more -->
                                                <Setter Property="Stroke" Value="Black"/>
                                                <Setter Property="StrokeThickness" Value="0.75"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard x:Name="jumpAnimationStoryboard">
                                                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                                            <DoubleAnimation Storyboard.TargetName="ballEllipse"
                                                                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                                             To="-5" Duration="0:0:0.3" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                                <DataTrigger.ExitActions>
                                                    <StopStoryboard BeginStoryboardName="jumpAnimationStoryboard"/>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="ballEllipse"
                                                                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                                             To="0" Duration="0:0:0.01" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.ExitActions>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <TextBlock Text="Game Over!"
                       FontSize="48" FontWeight="Bold" Foreground="DarkRed" <!-- Slightly darker Red -->
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       IsHitTestVisible="False">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsGameOver}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>

        <!-- Right Panel: Score, Next Balls, Button -->
        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Top">
            <TextBlock Text="{Binding Score, StringFormat='Score: {0}'}" FontSize="20" FontWeight="SemiBold" Margin="5,5,5,10"/>

            <TextBlock Text="Next Balls:" FontSize="16" Margin="5,10,5,2"/>
            <ItemsControl ItemsSource="{Binding NextBallColors}" HorizontalAlignment="Left" Margin="5,0,5,15">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Ellipse Width="25" Height="25" Margin="3"> <!-- Slightly larger next balls -->
                            <Ellipse.Fill>
                                <SolidColorBrush Color="{Binding}"/>
                            </Ellipse.Fill>
                            <Ellipse.Stroke>
                                <SolidColorBrush Color="Black" />
                            </Ellipse.Stroke>
                            <Ellipse.StrokeThickness>0.5</Ellipse.StrokeThickness>
                        </Ellipse>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button Content="New Game" Width="120" Margin="5,20,5,5" Padding="10,7"
                    HorizontalAlignment="Center" Click="NewGameButton_Click"
                    FontWeight="SemiBold" Background="LightSteelBlue" BorderBrush="SteelBlue"/>

            <!-- Removed the collapsed placeholder Border -->
        </StackPanel>
    </Grid>
</Window>
